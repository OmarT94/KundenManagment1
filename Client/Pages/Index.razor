@page "/"

<h3>Kunden Daten</h3>
Last Multible Of Three=@lastmultibleOfThree
<Counter OnMultibleOfThree="@updateLastMultibleOfThree"></Counter>

@if(Kunden ==null)
{
  <div class ="spinner"></div>  
}
else{
<div class ="card-deck">
    @foreach(var Kd in Kunden)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@Kd.KdName</h3>
                <h3>@Kd.KdId</h3>
                <h3>@Kd.KdAdresse</h3>
                <h3>@Kd.KdImgPath</h3>
            </div>
            <img class ="card-img-top" src ="@Kd.KdImgPath" />     
            <div class ="card-footer alert-info text-center">
                <a a href="#" class ="btn btn-primary">Anzeigen</a>
                <a href="#" class="btn btn-primary">Bararbeiten</a>
                <a ahref= "#" class="btn btn-danger">Löschen</a>

                </div>
            </div>
    }
</div>
}
@code{
    int lastmultibleOfThree = 0;
    private void updateLastMultibleOfThree(int value)
    {
        lastmultibleOfThree = value;
    }


}